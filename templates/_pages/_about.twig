{% extends '_layouts/_base.twig' %}

{% block content %}
    <section>
        <h1> {{ entry.heading}} </h1>
        <p> {{ entry.shortText}} </p>
    </section>
    <section>
        <h2>Our Team</h2>
        <div>
            {% for block in entry.team %}
            <div>
                {% if block.image.one() %}
                <img src="{{ block.image.one().url }}">
                {% endif %}
                <h3>{{ block.subheading }}</h3>
                <p>{{ block.shortText }}</p>
            </div>
            {% endfor %}
        </div>
    </section>

    <section>
        <h2>Team Managers</h2>
        <div>
            {% for block in entry.teamManagers %}
            <div>
                {% if block.image.one() %}
                <img src="{{ block.image.one().url }}">
                {% endif %}
            </div>
            {% endfor %}
        </div>
    </section>

{% endblock %}