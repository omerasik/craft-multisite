{# templates/_pages/about.twig #}
{% extends '_layouts/_base.twig' %}

{% block content %}

<section class="hero">
  {% if entry.heroImage.one() %}
    <div class="hero__image">
      <img src="{{ entry.heroImage.one().url }}" alt="{{ entry.heading }}">
      <div class="hero__overlay"></div>
    </div>
  {% endif %}
  {% if entry.heading %}
    <div class="hero__content">
      <h1 class="hero__title">{{ entry.heading }}</h1>
    </div>
  {% endif %}
</section>

<section class="intro">
  {% if entry.heading %}
    <h2 class="intro__heading">{{ entry.heading }}</h2>
  {% endif %}
  {% if entry.longText %}
    <div class="intro__text">{{ entry.longText }}</div>
  {% endif %}
</section>

{% set teamMembers = entry.team.all() %}
{% if teamMembers %}
  <section class="team">
    <h2>TEAMVERANTWOORDELIJKEN</h2>
    <div class="team__grid">
      {% for member in teamMembers %}
        {% set img = member.image.one() %}
        {% if img %}
          <div class="team__card">
            <img src="{{ img.url }}" alt="{{ member.subheading }}">
            <div class="team__subheading">{{ member.subheading }}</div>
            <div class="team__shorttext">{{ member.shortText }}</div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </section>
{% endif %}

{% set experts = entry.teamManagers.all() %}
{% if experts %}
  <section class="experts">
    <h2>EXPERTEN</h2>
    <div class="experts__grid">
      {% for expert in experts %}
        {% set img = expert.image.one() %}
        {% if img %}
          <div class="experts__card">
            <img src="{{ img.url }}" alt="{{ expert.subheading }}">
            <div class="experts__subheading">{{ expert.subheading }}</div>
            <div class="experts__shorttext">{{ expert.shortText }}</div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </section>
{% endif %}

{% endblock %}
