{% extends '_layouts/_base.twig' %}

{% block content %}

    <section>
        <h1> {{ entry.heading}} </h1>
    </section>

    <section>
        <h2>{{ entry.subheading }}</h2>
        <p>{{ entry.shortText}}</p>
    </section>

    <section>
        <h2>{{ entry.subheading2 }}</h2>
        <p>{{ entry.shortText2}}</p>
    </section>

    <section>
        <h2>{{ entry.subheading3 }}</h2>
        <p>{{ entry.longText}}</p>
    </section>

    <section>
        <h2>{{ entry.subheading4 }}</h2>
        <div>
            {% for block in entry.Experten %}
            <div>
                {% if block.image.one() %}
                <img src="{{ block.image.one().url }}">
                {% endif %}
                <h3>{{ block.subheading }}</h3>
                <p>{{ block.shortText }}</p>
            </div>
            {% endfor %}
        </div>
 
        <div>
            {% for block in entry.teamManagers %}
            <div>
                {% if block.image.one() %}
                <img src="{{ block.image.one().url }}">
                {% endif %}
            </div>
            {% endfor %}
        </div>
    </section>    
{% endblock %}