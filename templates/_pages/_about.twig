{% extends '_layouts/_base.twig' %}

{% block content %}

    <section class="hero">
        {% if entry.heroImage.one() %}
            <div class="hero__image">
                <img src="{{ entry.heroImage.one().url }}" alt="{{ entry.heroImage.one().title }}">
            </div>
        {% endif %}
        <div class="hero__content">
            <h1 class="hero__title">{{ entry.heading }}</h1>
        </div>
    </section>

    <section>
        <h2>{{ entry.subheading }}</h2>
        <p>{{ entry.shortText}}</p>
    </section>

    <section>
        <h2>{{ entry.subheading2 }}</h2>
        <p>{{ entry.shortText2}}</p>
    </section>

    <section>
        <h2>{{ entry.subheading3 }}</h2>
        <p>{{ entry.longText}}</p>
    </section>

    <section>
        <h2>{{ entry.subheading4 }}</h2>
        <div>
            {% for block in entry.Experten %}
            <div>
                {% if block.image.one() %}
                <img src="{{ block.image.one().url }}">
                {% endif %}
                <h3>{{ block.subheading }}</h3>
                <p>{{ block.shortText }}</p>
            </div>
            {% endfor %}
        </div>
 
        <div>
            {% for block in entry.teamManagers %}
            <div>
                {% if block.image.one() %}
                <img src="{{ block.image.one().url }}">
                {% endif %}
            </div>
            {% endfor %}
        </div>
    </section>    
{% endblock %}