{% extends '_layouts/_base.twig' %}

{% block content %}
    <section class="hero">
        {% if entry.heroImage.one() %}
            <div class="hero__image">
                <img src="{{ entry.heroImage.one().url }}" alt="{{ entry.heroImage.one().title }}">
            </div>
        {% endif %}
        <div class="hero__content">
            <h1 class="hero__title">{{ entry.heading }}</h1>
        </div>
    </section>

    <section>
        <div>
            <div>
                <h2>{{ entry.subheading }}</h2>
                <p>{{ entry.shortText }}</p>
            </div>
            {% if entry.image.one() %}
                <img src="{{ entry.image.one().url }}">
            {% endif %}
        </div>

        <div>
            <div>
                <div>
                    <h2>{{ entry.subheading2 }}</h2>
                    <p>{{ entry.shortText2 }}</p>
                </div>
                {% if entry.image2.one() %}
                    <img src="{{ entry.image2.one().url }}">
                {% endif %}
            </div>
            {% if entry.image3.one() %}
                <img src="{{ entry.image3.one().url }}">
            {% endif %}
        </div>

        <div>
            <div>
                <h2>{{ entry.subheading3 }}</h2>
                <p>{{ entry.shortText3 }}</p>
            </div>
            {% if entry.image4.one() %}
                <img src="{{ entry.image4.one().url }}">
            {% endif %}
        </div>

        <div>
            {% for asset in entry.image5.all() %}
                <img src="{{ asset.url }}">
            {% endfor %}
        </div>

        <div>
            <div>
                <h2>{{ entry.subheading4 }}</h2>
                <p>{{ entry.shortText4 }}</p>
            </div>
            {% if entry.image6.one() %}
                <img src="{{ entry.image6.one().url }}">
            {% endif %}
        </div>

        <div>
            <div>
                <h2>{{ entry.subheading5 }}</h2>
                <p>{{ entry.shortText5 }}</p>
            </div>
            {% if entry.image7.one() %}
                <img src="{{ entry.image7.one().url }}">
            {% endif %}
        </div>
{% endblock %}