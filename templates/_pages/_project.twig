{% extends '_layouts/_base.twig' %}

{% block content %}
    {% include '_components/_hero.twig' %}

    <section class="content-sections">
        <div class="content-block content-block--left">
            <div class="content-block__text">
                <h2 class="content-block__title">{{ entry.subheading }}</h2>
                <p class="content-block__description">{{ entry.shortText }}</p>
            </div>
            {% if entry.image.one() %}
                <div class="content-block__image">
                    <img src="{{ entry.image.one().url }}"
                </div>
            {% endif %}
        </div>

        <div class="content-block content-block--right content-block--double-image">
            <div class="content-block__text">
                <h2 class="content-block__title">{{ entry.subheading2 }}</h2>
                <p class="content-block__description">{{ entry.shortText2 }}</p>
            </div>
            <div class="content-block__images">
                {% if entry.image2.one() %}
                    <div class="content-block__image content-block__image--table">
                        <img src="{{ entry.image2.one().url }}">
                    </div>
                {% endif %}
                {% if entry.image3.one() %}
                    <div class="content-block__image content-block__image--logo">
                        <img src="{{ entry.image3.one().url }}">
                    </div>
                {% endif %}
            </div>
        </div>

        <div class="content-block content-block--left">
            <div class="content-block__text">
                <h2 class="content-block__title">{{ entry.subheading3 }}</h2>
                <p class="content-block__description">{{ entry.shortText3 }}</p>
            </div>
            {% if entry.image4.one() %}
